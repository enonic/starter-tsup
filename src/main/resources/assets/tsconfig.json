{
	"extends": "../../../../tsconfig.json",
	"exclude": [
		"../../../../node_modules/typescript/lib/lib.es5.d.ts",
	],
	"include": [
		"./**/*.tsx",
		"./**/*.ts"
	],
	"compilerOptions": {
		//──────────────────────────────────────────────────────────────────────
		// Modules
		//──────────────────────────────────────────────────────────────────────
		"baseUrl": ".",
		"moduleResolution": "node",
		"paths": {},
		"rootDir": ".",
		"types": [
			"react"
		],

		//──────────────────────────────────────────────────────────────────────
		// Language and Environment
		//──────────────────────────────────────────────────────────────────────
		"jsx": "react",
		"lib": [
			"DOM",
			"ES5",
			"ES2015",
			"ES2016",
			"ES2017",
			"ES2018",
			"ES2019",
			"ES2020",
		],
		"target": "ES2020" // Modern browsers
	}
}
